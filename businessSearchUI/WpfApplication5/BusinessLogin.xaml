<Window x:Class="WpfApplication5.BusinessLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication5"
        mc:Ignorable="d"
        Title="BusinessLogin" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="UserName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,60,0,0"/>
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="110,60,0,0"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,91,0,0"/>
        <TextBox x:Name="Passwordtext" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="110,91,0,0"/>
        <Button x:Name="button" Content="Log in" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="110,119,0,0"/>

    </Grid>
</Window>
